import ./{elements/_generator}!

head: $[content :block][
    import ./{elements/meta}

    link: var 'metaLink
    element 'head content
]

body: $[][

]

html: $[page :block][
    html4: attr 'html4

    doctype: (html4)?
        -> {!html
            <!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01//EN" "http://www.w3.org/TR/html4/strict.dtd">
        }
        -> {!html
            <!DOCTYPE html>
        }

    join.with: "\n" @[
        doctype
        element 'html page
    ]  
]